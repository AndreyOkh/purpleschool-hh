templ MenuStyle() {
	<style>
		.menu {
			/*margin: 20px auto;*/
			display: flex;
			flex-direction: row;
			justify-content: space-between;
			max-width: 1290px;
			width: 100%;
			padding: 20px 77px;
		}
		.menu__auth {
			display: flex;
			gap: 20px;
		}
		.menu__auth-sign {
			padding-top: 14px;
			text-decoration: none;
			font-size: 16px;
			color: #ffffff;
			cursor: pointer;
		}
		.menu__auth-sign:hover {
			color: #9f9f9f;
		}
		.menu__auth-register {
			font-weight: bold;
		}
		.menu__logo-icon {

		}
		.menu__logo-name {
			font-size: 20px;
			text-decoration: none;
			color: #ffffff;
		}
		.menu__logo {
			display: flex;
			gap: 10px;
			align-items: center;
			justify-content: center;
		}

	</style>
}