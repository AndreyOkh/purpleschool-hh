package layout

templ Header() {
	@HeaderStyle()
	<div class="header">
        @Menu()
	    { children... }
	</div>
}

templ HeaderStyle() {
	<style>
		.header {
			display: flex;
			justify-content: space-between;
			flex-direction: column;
			text-align: center;
			align-items: center;
			background-color: #222222;
			width: 100%;
		}
	</style>
}